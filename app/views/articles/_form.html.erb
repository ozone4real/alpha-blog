<%= form_with(model: @article, local: true, :html => {class: "form-container", role: "form", multipart: true})  do |form| %>
<div class="form-group mb-4">
<%= form.text_field :title, placeholder: 'title', required: true %>
<small class="text-danger"><%= "Title #{@article.errors.to_hash[:title][0]}" if @article.errors.to_hash[:title].any? %> </small>
</div>
<div class="form-group mb-4" >
<%= form.file_field :image_url, image_preview: true, 'up-data': '.image-preview'.to_json, accept: "image/*" %>
</div>
<div class="form-group mb-4" >
<%= form.text_area :description, class: 'quill_container', placeholder: 'Write your story....',  required: true %>
<small class="text-danger"><%= "Article body #{@article.errors.to_hash[:description][0]}" if @article.errors.to_hash[:description].any? %> </small>
</div>
<div class="form-group">
<%= form.submit class: 'btn btn-primary btn-lg' %> 
</div>
<% end %>
<%= link_to 'Back to articles listing', articles_path %> 