<div class="article-page">
<div class="article-title mb-4 text-center title"> <h1><%= @article.title %></h1> </div>
<div class="row justify-content-center">
 <div class="mx-2 text-secondary" ><%= "#{time_ago_in_words(@article.created_at)} ago" %> <%= @article.time_to_read %> </div> 
 <div class="mx-2 text-primary">By <%= @article.user.username %></div>
 </div>
<% unless @article.image_url.to_s.empty? %>
<div class="article-image-container" style="background: url(<%= @article.image_url.to_s %>) no-repeat center center; background-size: cover;">.</div>
<% end %>
<div class="article-body"><%= sanitize @article.article_body %>
<div class="reactions-section">
<% if logged_in? %>
<%= link_to("/articles/#{@article.id}/likes", method: 'post') do %>
<i class= '<%= "#{liked_by_me?(@article) ? 'fas' : 'far'}" %> fa-heart' id="like-button" style="font-size: 25px; cursor: pointer" aria-hidden="true"></i>
<% end %>
<% end %>
<small><span id="like-count"><%= @article.likes.length %></span> likes</small>
</div>
</div>
</div>