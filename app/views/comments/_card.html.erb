<div class="comment-card"> 
<div class="commenter-img mr-2">
<%= image_tag comment.user.image_url.to_s %>
</div>
<div class="pt-0">
<div><%= comment.user.username %> <span><small class="text-secondary"><%= "#{time_ago_in_words(comment.created_at)} ago" %></small><span></div>
<div class="comment-body mt-2"> <%= sanitize comment.body %> </div>
</div>
</div>