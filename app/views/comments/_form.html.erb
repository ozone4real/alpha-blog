
<%= form_with model: [@article, comment], remote: true do |f| %>
  <div class="form-group mb-4">
    <%= f.text_field :body, placeholder: 'What do you think ?', class: 'quill_container', required: true, id: id %>
    <small class="text-danger error"> </small>
  </div>
  <div class="form-group">
    <%= f.submit action, class: 'btn btn-dark btn-sm' %> <%= content_tag(:button, 'Cancel', class: 'btn btn-light btn-sm cancel-btn') if action == 'Save' %>
  </div>
<% end %>